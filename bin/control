#!/bin/bash

$PIDFILE=${OPENSHIFT_TMP_DIR}/seafile.pid
$LOGFILE="${OPENSHIFT_SEAFILE_LOG_DIR}/seafile.log"

echo "Running control" > $LOGFILE

case $! in
  start )
    while true ; do 
      nc -l -p 8080 -c 'echo -e "HTTP/1.1 200 OK\n\n $(date)"'
    done &
    echo $! > $PIDFILE
  ;;
  stop )
    xargs -a $PIDFILE
    rm $PIDFILE
  ;;
esac
